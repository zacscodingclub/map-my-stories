<div class="login-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row collapse expanded">
      <div class="small-12 medium-6 column small-order-2 medium-order-1">
        <div class="login-box-form-section">
          <h1 class="login-box-title">Sign up</h1>
          <%= devise_error_messages! %>
          <%= f.text_field :username, class:"login-box-input", autofocus: true, placeholder:"Username" %>
          <%= f.email_field :email, class:"login-box-input", placeholder:"Email" %>
          <%= f.password_field :password, class:"login-box-input", autocomplete: "off", placeholder:"Password" %>
          <%= f.password_field :password_confirmation, class:"login-box-input", autocomplete: "off", placeholder:"Retype password" %>
          <%= f.submit "Sign me up", class:"login-box-submit-button" %>
        </div>
        <div class="or">OR</div>
      </div>
      <div class="small-12 medium-6 column small-order-1 medium-order-2 login-box-social-section">
        <div class="login-box-social-section-inner">
          <span class="login-box-social-headline">Sign in with<br />your social network</span>
          <a class="login-box-social-button-facebook">Log in with facebook</a>
          <a class="login-box-social-button-twitter">Log in with Twitter</a>
          <a class="login-box-social-button-google">Log in with Google+</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
